{
  "name": "digi-eventos",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "drizzle-orm": "^0.44.6",
      "elysia": "^1.4.12",
      "@types/bun": "^1.3.0"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @digi-eventos/db db:push",
    "db:studio": "turbo -F @digi-eventos/db db:studio",
    "db:generate": "turbo -F @digi-eventos/db db:generate",
    "db:migrate": "turbo -F @digi-eventos/db db:migrate",
    "db:start": "turbo -F @digi-eventos/db db:start",
    "db:watch": "turbo -F @digi-eventos/db db:watch",
    "db:stop": "turbo -F @digi-eventos/db db:stop",
    "db:down": "turbo -F @digi-eventos/db db:down",
    "db:seed": "turbo -F @digi-eventos/db db:seed"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "tsdown": "^0.15.5",
    "@types/bun": "^1.3.0"
  },
  "packageManager": "bun@1.3.0"
}
